<h3>{{viewTitle}}</h3>
<form action="/admin" onsubmit="return validateForm()" method="POST" autocomplete="off">
    <div class="form-group">
        <label>First Name</label>
        <input type="text" class="form-control" name="firstName" placeholder="First Name" value="{{admin.firstName}}"required>
        <div class="text-danger">
            {{admin.firstNameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input type="text" class="form-control" name="lastName" placeholder="Last Name" value="{{admin.lastName}}"required>
    </div>
    <div class="text-danger">
        {{admin.lastNameError}}
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{admin.email}}"required>
    </div>
    <div class="text-danger">
        {{admin.emailError}}
    </div>
    <div class="form-group">
        <label>Employee Number</label>
        <input type="number" class="form-control" name="empNum" placeholder="Employee Number"
            value="{{admin.empNum}}"required>
    </div>
    <div class="text-danger">
        {{admin.empNumError}}
    </div>
    <div class="form-group">
        <label>Authorization Code</label>
        <input type="number" class="form-control" name="code" id="auth" placeholder="Authorization Code" required>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password" placeholder="Password" value="{{admin.password}}"required>
    </div>
    <div class="text-danger">
        {{admin.passwordError}}
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
    </div>
</form>
<script>
function validateForm() {
  let x = document.getElementById("auth").value;
  if (x != 678876 ) {
    alert("Authorization Code Invalid");
    return false;
  }
}
</script>
